{% comment %}
  Renders a product card.

   Accepts:
   - card_product: {object} Product object (required)

   Usage:
    {% render 'product-card' card_product: product %}
{% endcomment %}

<div class="flex flex-col p-3 rounded-md bg-white border border-gray-200">
  {% render 'image', image: card_product.featured_image %}
  <div class="flex flex-col gap-1 mt-4">
    <h3 class="font-medium line-clamp-1">{{ card_product.title }}</h3>
    <p class="text-gray-500 mb-2">{{ card_product.price | money }}</p>
    {% form 'product', card_product %}
      <input type="hidden" name="id" value="{{ card_product.first_or_available_variant.id }}">
      <button
        class="inline-flex items-center justify-center px-4 h-11 font-medium rounded-sm text-white bg-black transition-opacity disabled:opacity-60 disabled:cursor-not-allowed w-full "
        name="add">
        Add to cart
      </button>
    {% endform %}
  </div>
</div>
