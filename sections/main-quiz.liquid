{% liquid
  assign current_step = 0
  assign next_step = current_step | plus: 1
%}

<section class="main-quiz grid items-center py-12 md:py-16 lg:py-20">
  <quiz-router data-current-step="{{ current_step }}" data-next-step="{{ next_step }}">
    <div class="container mx-auto px-4 flex flex-col items-start gap-4 md:gap-5">
      {% render 'image', class: 'h-[50vh] lg:h-[30rem]', image: section.settings.image %}
      <h1 class="max-w-xl scroll-m-20 text-4xl font-medium tracking-tight lg:text-5xl">
        {{ section.settings.heading }}
      </h1>
      <p class="max-w-prose text-xl text-gray-500">
        {{ section.settings.text }}
      </p>
      {% if section.settings.label != blank %}
        <a
          href="{{ routes.root_url }}"
          class="inline-flex items-center justify-center px-6 h-11 font-medium rounded-sm text-white bg-black">
          {{ section.settings.label }}
        </a>
      {% endif %}
    </div>
  </quiz-router>
</section>

{% schema %}
{
  "name": "Main Quiz",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our matching assistant"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Start your journey to an elegant you today."
    },
    {
      "type": "text",
      "id": "label",
      "label": "Button Label",
      "default": "Get Started"
    }
  ]
}
{% endschema %}
